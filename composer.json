{
    "name": "kc/kx",
    "type": "project",
    "description": "KalipsoX - Simple and powerful PHP framework. You can quickly build your applications on it.",
    "keywords": ["framework", "kalipso", "kalipsox", "php-framework"],
    "license": "MIT",
    "authors": [
        {
            "name": "KalipsoCollective",
            "email": "hello@koalapix.com",
            "homepage": "https://koalapix.com"
        }
    ],
    "require": {
        "kx/core": "dev-main"
    },
    "autoload": {
        "psr-4": {
            "KX\\": "app"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
